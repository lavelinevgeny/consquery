	лТекстЗапроса = СтрЗаменить(лТекстЗапроса, "_БывшаяДвойнаяКавычка_", Символ(34)); 
	
	Возврат Новый Структура("Текст, Параметры", лТекстЗапроса, лПараметрыЗапроса);


		Подзапрос = "ВЫБРАТЬ " + ТекПоля + " ИЗ " + ВыбраннаяКоллекция.Значение + "." + ТекМетаданное.Значение.Имя + ?(ТекУсловие = "", "", " ГДЕ " + ТекУсловие);
		

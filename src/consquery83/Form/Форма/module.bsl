		КонецЦикла;
		
		мМассивУдаленныхСтрок.Удалить(0);
	КонецЦикла;
	
	Если ДеревоЗапросов.Строки.Количество() <> 0 И мТекущаяСтрока <> Неопределено Тогда

		СпособВыгрузки       = мТекущаяСтрока.СпособВыгрузки;

Процедура ТрансформироватьЗначениеВДругойТип(ИсходноеЗначение, НовоеЗначение, НовыйТип)
	
	ТекущийТип = ТипЗнч(ИсходноеЗначение);
	
	Если ТекущийТип = Тип("СписокЗначений") И НовыйТип = Тип("ТаблицаЗначений") Тогда 
		НовоеЗначение = Новый ТаблицаЗначений;
		
		КвалификаторыСтроки = Новый КвалификаторыСтроки(500);
	    ТипСтрокаОгр = Новый ОписаниеТипов("Строка", ,КвалификаторыСтроки);
		Если ИсходноеЗначение.Количество() Тогда 

			МассивТипов = Новый Массив;
			МассивТипов.Добавить(ТипЗнч(ИсходноеЗначение[0].Значение));
			
			ТипКолонки = Новый ОписаниеТипов(МассивТипов);			
		Иначе
			ТипКолонки = ТипСтрокаОгр;
		КонецЕсли;
		НовоеЗначение.Колонки.Добавить("Значение", ТипКолонки);
		НовоеЗначение.Колонки.Добавить("Представление", ТипСтрокаОгр);
		
		Для Каждого СтрокаКоллекции Из ИсходноеЗначение Цикл 
			НоваяСтрока = НовоеЗначение.Добавить();
			ЗаполнитьЗначенияСвойств(НоваяСтрока, СтрокаКоллекции);
		КонецЦикла;
		
		Возврат;
		
	ИначеЕсли ТекущийТип = Тип("ТаблицаЗначений") И НовыйТип = Тип("СписокЗначений") 
		И ИсходноеЗначение.Количество() Тогда 
		
		НовоеЗначение = Новый СписокЗначений;
		Для Каждого СтрокаКоллекции Из ИсходноеЗначение Цикл 
			НовоеЗначение.Добавить(СтрокаКоллекции[0]);
		КонецЦикла;
		
		Возврат;
		
	ИначеЕсли НовыйТип = Тип("СписокЗначений") И Не ТипСоСпециальнымОтображением(ТекущийТип) Тогда 
		НовоеЗначение = Новый СписокЗначений;
		НовоеЗначение.Добавить(ИсходноеЗначение);
		
		Возврат;
		
	ИначеЕсли ТекущийТип = Тип("СписокЗначений") И ИсходноеЗначение.Количество() Тогда  
		НовоеЗначение = ИсходноеЗначение[0].Значение;
	Иначе
		НовоеЗначение = ИсходноеЗначение;
	КонецЕсли;
	
	Массив = Новый Массив;
	Массив.Добавить(НовыйТип);
	Описание = Новый ОписаниеТипов(Массив);
	
	НовоеЗначение = Описание.ПривестиЗначение(НовоеЗначение);
	
КонецПроцедуры // ТрансформироватьЗначениеВДругойТип()


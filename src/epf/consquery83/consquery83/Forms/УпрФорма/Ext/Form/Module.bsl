	//Имя	"Системы"
	//URIПространстваИмен	"http://v8.1c.ru/8.1/data/enterprise/current-config"
	//Представление	"Системы"
	//Картинка	Картинка
	//Вид	"ОтображаемыйВФорме"
	//ИндексТипаВКоллекции	43

	Результат = Новый Структура;
	Результат.Вставить("КартинкаТипа", ИнформацияПоТипу.Картинка);
	Результат.Вставить("Тип", ТипДанныхXML.ИмяТипа);
	Результат.Вставить("ТипВФорме", ИнформацияПоТипу.Представление);
	Результат.Вставить("URIПространстваИмен", ТипДанныхXML.URIПространстваИмен);
	
	Возврат Результат;
	
КонецФункции // ДетальнаяИнформацияПоТипу()

// Находит строки в глобальной таблице значений параметров запросов по указанному отбору
// Параметры:
//  ПараметрыОтбора - Структура - 
//                    Ключ - имя поля по которому необходимо сделать отбор
//                    Значение - значение, по которому необходимо сделать отбор в поле, указанном в ключе
//  АдресПараметровЗапросов - Строка - строка с адресом во временном хранилище где расположена глобальная таблица
//                                     значений параметров запроса
// Возвращаемое значение:
//  Массив структур - ключи структуры - колонки глобальной таблицы значений параметров запроса
//                                     список колонок так же хранится в реквизите КолонкиПараметровЗапросов
//  
&НаСервереБезКонтекста
Функция НайтиПараметрыНаСервере(ПараметрыОтбора, АдресПараметровЗапросов, АдресТЗСИнформациейПоТипам, УникальныйИдентификатор, Ошибка, АдресСеансовыхДанных)
	
	ПараметрыЗапросов      = ПолучитьИзВременногоХранилища(АдресПараметровЗапросов);
	ПоляПараметровЗапросов = СтрокаСКолонкамиКоллекции(ПараметрыЗапросов);
	ОтборанныеПараметры    = ПараметрыЗапросов.НайтиСтроки(ПараметрыОтбора);
	НайденныеПараметры     = Новый Массив;
	
	Для Каждого ПараметрЗапроса Из ОтборанныеПараметры Цикл 
		СтрокаСПараметром = Новый Структура(ПоляПараметровЗапросов);
		ЗаполнитьЗначенияСвойств(СтрокаСПараметром, ПараметрЗапроса);
		
		Если ПустаяСтрока(СтрокаСПараметром.Тип) Тогда 
			
			//ДетальныеДаныеПараметраПоЗначению(Значение, УникальныйИдентификатор, АдресТЗСИнформациейПоТипам, АдресСеансовыхДанных, Ошибка)			
			
			Значение = ЗначениеИзСтроки(СтрокаСПараметром.Значение);
			
			Если Значение = Неопределено Тогда 
				Тип = Тип("Строка");
				Значение = СтрокаСПараметром.Значение;
			Иначе
				Тип = ТипЗнч(Значение);
			КонецЕсли;
			
			ИнформацияПоТипу = ДетальнаяИнформацияПоТипу(Тип, УникальныйИдентификатор, АдресТЗСИнформациейПоТипам, АдресСеансовыхДанных, Ошибка);
					
			Если ИнформацияПоТипу = Неопределено Тогда 
				Возврат Неопределено;
			КонецЕсли;
			
			ЗаполнитьЗначенияСвойств(СтрокаСПараметром, ИнформацияПоТипу);
			
			Массив = Новый Массив;
			Массив.Добавить(Тип);
			Описание = Новый ОписаниеТипов(Массив);
		                                      
			Если ТипСоСпециальнымОтображением(Тип) Тогда 
				СтрокаСПараметром.ЗначениеВФорме = ФормированиеПредставленияЗначения(Значение); 
			Иначе
				СтрокаСПараметром.ЗначениеВФорме = Описание.ПривестиЗначение(Значение);
			КонецЕсли;
			
		КонецЕсли;
		
		НайденныеПараметры.Добавить(СтрокаСПараметром);
	КонецЦикла;
	
	Возврат НайденныеПараметры;
	
КонецФункции // НайтиПараметрыНаСервере()

// Обогащается текущий параметр запроса по его новому типу, учитывая текущий типа параметра
// Пропускается обработка параметров с типом Массив и СписокЗначений
// Параметры:
//  НовыйТип - JSON - сериализованный Тип()
//  ТекущийТип - Сруктура - структура с данными параметра запроса
//  
&НаСервереБезКонтекста
Процедура ОбогатитьПараметрТекущегоЗапросаИПривестиЕгоЗначениеПоТипу(НовыйТип, ТекущийТип, УникальныйИдентификатор, АдресТЗСИнформациейПоТипам, АдресСеансовыхДанных)
	
	Перем Ошибка;
	
	ТекущийТипXML = ТекущийТип.Тип;
	
	Если Не ПустаяСтрока(ТекущийТипXML) Тогда 
		URIПространстваИмен = URIПоТипуНаСервере(ТекущийТипXML);
		Если URIПространстваИмен = Неопределено Тогда 
			ТекстОшибки = СтрШаблон("Для типа %1 не определился URIПространстваИмен", ТекущийТипXML);
			ВызватьИсключение ТекстОшибки;
		КонецЕсли;
		Тип = СериализаторXDTO.ИзXMLТипа(ТекущийТипXML, URIПространстваИмен);
		НовыйТипЗначение = ЗначениеИзСтроки(НовыйТип);
		Если Тип = Тип("СписокЗначений") 
			ИЛИ Тип = Тип("Массив") 
			ИЛИ НовыйТипЗначение.Типы().Количество() = 0  // Не удалось определить тип параметр в запросе, например, сам тип является полем запроса
				ИЛИ НовыйТипЗначение.СодержитТип(Тип) Тогда 
			Возврат;
		КонецЕсли;
	Иначе
		НовыйТипЗначение = ЗначениеИзСтроки(НовыйТип);
	КонецЕсли;
	
	// Необходимо заполнить поля:
	//   	- ГлобальныйПараметр
	//   	- ДобавлятьВоВременнуюТаблицу
	//   	+ Значение
	//   	+ ЗначениеВФорме
	//   	-  ИдентификаторСтроки
	//   	- Имя
	//   	+ КартинкаТипа
	//   	+ Тип
	//   	+ ТипВФорме
	
	ДоступныеТипыПараметра = НовыйТипЗначение.Типы();
	
	Если ДоступныеТипыПараметра.Количество() > 0 Тогда
		Тип = ДоступныеТипыПараметра[0];
	Иначе
		// Не удалось определить тип параметр в запросе, например, сам тип является полем запроса
		Тип = Тип("Строка");
	КонецЕсли;
	
	ИнформацияПоТипу = ДетальнаяИнформацияПоТипу(Тип, УникальныйИдентификатор, АдресТЗСИнформациейПоТипам, АдресСеансовыхДанных, Ошибка);
	
	Если ИнформацияПоТипу = Неопределено Тогда 
		ВызватьИсключение Ошибка;
	КонецЕсли;

	ТипXML = СериализаторXDTO.XMLТип(Тип);
	Если ТипXML = Неопределено Тогда 
		// ошибка платформы, когда на клиенте не работает метод СериализаторXDTO.ИзXMLТипа
		ТипXML = ВXMLТипНаСервере(Тип);
	Иначе
		// преобразуем в структуру для передачи на сервер
		ТипXML = Новый Структура("ИмяТипа, URIПространстваИмен", ТипXML.ИмяТипа, ТипXML.URIПространстваИмен);
	КонецЕсли;
	

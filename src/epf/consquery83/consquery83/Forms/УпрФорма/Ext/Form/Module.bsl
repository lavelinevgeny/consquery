				лТекстСообщения = СтрЗаменить(лТекстСообщения, "%Действие%", лПараметры.Действие);
				ПоказатьСообщениеПользователю(лТекстСообщения, Объект, УникальныйИдентификатор);
				Возврат;
			КонецЕсли;
			

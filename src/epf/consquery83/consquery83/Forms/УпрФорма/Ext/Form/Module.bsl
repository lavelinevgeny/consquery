		лНовыйПараметр = ПараметрыТекущегоЗапроса.Добавить();
		ЗаполнитьЗначенияСвойств(лНовыйПараметр, лПараметрЗапроса);
		
		лНовыйПараметр.ГлобальныйПараметр = ЭтоГлобальныйПараметр;
		
	КонецЦикла; 
	
